@import '../components/navigation/var.inc.styl'

.page--problem_detail
  .ide-container
    display: none
  .section--contest-info
    background: #67AABB url(problem_detail/problem-contest-bg.png) right top no-repeat
    color: #FFF
    font-size: 1rem
    cursor: pointer

    +retina()
      background-image: url(problem_detail/problem-contest-bg@2x.png)
      background-size: 131px 150px

    h1
      font-size: 1.3rem
      color: #FFF
      text-shadow: 0 1px 3px rgba(#000, 0.5)

  .header--hidden
    margin-top: -20rem

  .main--hidden, .footer--hidden
    display: none

  .ide-mode
    .nav
      background: rgba(255,255,255,0.98)
    .nav__item
      color: $text-color
    .header
      margin-top: -20rem
    .content-main, .footer
      display: none
    .ide-problem-detail
      max-height: 100%
      overflow: auto
    .ide-container
      display: table-row
    .main
      display: table
      width: 100%
      height: 100%
      padding-top: $nav-item-height
      padding-bottom: 0
      .content-container
        max-width: none
        display: table
        width: 100%
        height: 100%

