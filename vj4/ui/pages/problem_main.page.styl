.page--problem_main
  .col--status
    width: rem(150px)
    position: relative

  .col--submit_n, .col--ac_rate, .col--difficulty
    width: rem(70px)
    text-align: center

  .col--status
    border-right: 1px solid $table-border-color

  .col--submit_n, .col--difficulty
    border-left: 1px solid $table-border-color

  +mobile()
    .col--status,
    .col--submit_n,
    .col--difficulty
      display: none

    .col--ac_rate
      border-left: 1px solid $table-border-color
