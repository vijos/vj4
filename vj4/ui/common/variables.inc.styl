// Record Status
$record-status-color = {
  'pass': $success-color,
  'fail': $fail-color,
  'progress': $progress-color,
  'ignored': $invalid-color,
  'pending': $invalid-color,
}

$record-status-icon = {
  'pass': $icon-check,
  'fail': $icon-close,
  'progress': $icon-hourglass,
  'ignored': $icon-close,
  'pending': $icon-schedule,
}
