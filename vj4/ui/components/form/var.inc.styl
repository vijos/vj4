$form-standard-height = 35px
$input-margin = 0 0 1rem
$input-background-color = #FFF
$input-border = 1px solid #DDD
$input-outline = 2px solid transparent
$input-focus-outline = 2px solid #C1E0FF

form-styles()
  appearance: none
  display: block
  width: 100%
  font-size: rem($font-size-secondary)
  margin: $input-margin
  height: rem($form-standard-height)
  line-height: 1.2
  padding: rem(5px)
  border: $input-border
