@import './var.inc.styl'

.button
  font-size: rem($font-size-secondary)
  line-height: rem($form-standard-height)
  background-color: $default-color
  border: 0
  height: rem($form-standard-height)
  padding: rem(0 25px)
  display: inline-block
  outline: 0
  margin: 0 0 1rem
  color: $text-color
  transition: background-color .1s linear, box-shadow .1s linear
  cursor: pointer

  &:hover, &:focus
    background-color: darken($default-color, 10%)
    text-decoration: none
    box-shadow: 0 2px 10px rgba(#000, 0.2)

  &.expanded
    padding-left: 0
    padding-right: 0
    text-align: center
    width: 100%

  &.rounded
    border-radius: rem($form-standard-height / 2)

  &.primary
    background-color: $primary-color
    color: #FFF

    &:hover
      background-color: lighten($primary-color, 10%)

  &.secondary
    background-color: $secondary-color
    color: #FFF

    &:hover
      background-color: lighten($secondary-color, 10%)

.button.inverse
  line-height: rem($form-standard-height - 4)
  border: 2px solid #FFF
  background: none
  color: #FFF

  &:hover, &:focus
    border-color: $immersive-primary-color
    color: $immersive-primary-color
    background: none
    box-shadow: none
