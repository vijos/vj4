@import '~vj-simplemde/src/css/simplemde.css';

.cm-s-simplemde
  border-radius: 0
  border-color: #DDD
  border-top: 0
  padding: rem(5px)
  min-height: rem(150px)
  font-family: $code-font-family
  font-weight: 300

.simplemde-toolbar
  border-radius: 0
  border-color: #DDD
  opacity: 1
  background: #F8F8F8
  &:hover
    opacity: 1

.cm-s-simplemde .CodeMirror-scroll
  min-height: rem(150px)

.simplemde-toolbar:before,
.simplemde-toolbar:after
  display: none

.simplemde-toolbar
  padding: rem(5px)

.simplemde-toolbar i.separator
  border-right: 0

.simplemde-toolbar a
  color: #AAA !important
  border: 0
  background: none
  border-radius: 0
  font-size: 1.2rem
  outline: 0

  &:hover
    color: #444 !important
    border: 0
    background: none

  &.active
    background: $primary-color
    color: #FFF !important
    border: 0

.simplemde-toolbar.disabled-for-preview a:not(.no-disable)
  background: none
  opacity: 0.6

.cm-s-simplemde .CodeMirror-code .cm-comment
  background: none
