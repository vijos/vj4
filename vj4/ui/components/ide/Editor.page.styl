.ReactCodeMirror
  flex: 1
  position: relative

.cm-s-vjcm
  position: absolute
  left: 0
  top: 0
  width: 100%
  height: 100%
  font-family: $code-font-family
  font-weight: 300
  font-size: 0.9rem
  line-height: 1.2

  &.CodeMirror-focused .CodeMirror-selected
    background: #cee4f2

  .CodeMirror-gutters
    border-right: 0
    background: none

  .CodeMirror-linenumber
    color: #DDD
