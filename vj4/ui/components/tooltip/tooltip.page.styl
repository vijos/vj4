// modified from balloon.css and hint.css

[data-tooltip]
  position: relative

  &:before, &:after
    opacity: 0
    pointer-events: none
    bottom: 100%
    left: 50%
    position: absolute
    z-index: 10

  &.tooltip--downward
    &:before, &:after
      bottom: initial
      top: 100%

  &:after
    background: #333
    color: #fff
    content: attr(data-tooltip)
    font-size: rem($font-size-small)
    padding: .7em 0.9em
    white-space: nowrap
    margin-bottom: 11px
    box-shadow: 1px 1px 4px rgba(#000, 0.3)
    line-height: 1

  &.tooltip--downward
    &:after
      margin-top: 11px
      margin-bottom: 0

  &:before
    border: 6px solid transparent
    border-top-color: #333
    content: ""

  &.tooltip--downward
    &:before
      border-top-color: transparent
      border-bottom-color: #333

  &:before, &:after
    transform: translate(-50%, 5px) scale(0.9)
    transform-origin: 50% 100%
    transition: transform .2s, opacity .2s
    transition-timing-function: ease-out-cubic

  &.tooltip--downward
    &:before, &:after
      transform: translate(-50%, -5px) scale(0.9)
      transform-origin: 50% 0

  &:hover
    &:before, &:after
      opacity: 1
      pointer-events: auto
      transform: translate(-50%, 0) scale(1)
      transition-delay: .4s
