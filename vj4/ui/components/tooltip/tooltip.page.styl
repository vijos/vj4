// modified from balloon.css and hint.css

[data-tooltip]
  position: relative

  &:before, &:after
    opacity: 0
    pointer-events: none
    bottom: 100%
    left: 50%
    position: absolute
    z-index: 10

  &:after
    background: #333
    color: #fff
    content: attr(data-tooltip)
    font-size: 0.8rem
    padding: .7em 0.9em
    white-space: nowrap
    margin-bottom: 11px
    box-shadow: 1px 1px 4px rgba(#000, 0.3)

  &:before
    border: 6px solid transparent
    border-top-color: #333
    content: ""

  &:before, &:after
    transform: translate(-50%, 5px) scale(0.9)
    transform-origin: 50% 100%
    transition: transform .2s, opacity .2s
    transition-timing-function: ease-out-cubic

  &:hover
    &:before, &:after
      opacity: 1
      pointer-events: auto
      transform: translate(-50%, 0) scale(1)
      transition-delay: .4s
