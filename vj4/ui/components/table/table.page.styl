@import '~misc/section.inc.styl'

.data-table
  width: 100%
  table-layout: fixed
  white-space: nowrap
  font-size: rem($font-size-small)
  font-weight: normal

  th
    font-size: rem($font-size-secondary)

  tr
    border-top: 1px solid lighten($table-border-color, 20%)
    border-bottom: 1px solid lighten($table-border-color, 20%)

    &:nth-child(even)
      background: #F4F4F4

  thead > tr
    color: #888
    border-top: 0
    border-bottom: 1px solid $table-border-color

  td, th
    white-space: nowrap
    overflow: hidden
    text-overflow: ellipsis
    padding: rem(8px $table-padding-h)
    line-height: 1.5

  th
    padding: rem(15px $table-padding-h)

  .empty-row
    color: #AAA
    font-size: rem($font-size-small)

.section__table-container
  overflow: hidden

.section__table-header
  background: rgba(#FFF, 0.95)
  box-shadow: 0 3px 2px rgba(#000, 0.03)
  position: relative
  z-index: 100
  transition: box-shadow .2s linear

  thead > tr
    border-bottom: 0

  &.is_stuck
    box-shadow: 0 2px 5px rgba(#000, 0.2)

.section__table-container,
.section__body
  & > .data-table
    td, th
      &:first-child
        padding-left: rem($section-gap-h)

      &:last-child
        padding-right: rem($section-gap-h)
