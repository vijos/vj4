@import 'section.inc.styl'
@import '../components/form/var.inc.styl'

.immersive-section, .section
  margin-bottom: rem($section-margin)

  &::before, &::after
    content: ' '
    display: table

  &.side
    font-size: rem($font-size-secondary)

.section
  background: #FFF
  box-shadow: 0 2px 2px rgba(#000, 0.2)

.section__header
  padding: rem($section-gap-v) rem($section-gap-h) 0.7em
  position: relative

.section__body
  padding: 0.7em rem($section-gap-h)

  &:first-child
    padding-top: rem($section-gap-v)

  &:last-child
    padding-bottom: rem($section-gap-v)

  &.no-padding
    padding-left: 0
    padding-right: 0

.section__footer
  border-top: 1px solid $bg-color
  padding: rem($section-gap-h)

.section__title
  color: #666

.section__header .section__title
  line-height: $form-standard-height

h1.section__title
  font-size: 1.4rem

h2.section__title
  font-size: 1.2rem

h3.section__title
  font-size: 1rem

.section__tools
  position: absolute
  right: rem($section-gap-h)
  top: rem($section-gap-v)

  .tool-button
    appearance: none
    border: 0
    background: none
    color: #AAA
    margin-left: rem(5px)
    padding: rem(0 5px)
    line-height: rem(24px)
    font-size: rem($font-size-small)
    outline: 0

    &:hover
      color: #444
